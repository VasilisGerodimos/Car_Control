<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_for_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BC8AC"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.root.car_control.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/cross_out_mark"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textViewRpm"
        android:layout_toEndOf="@+id/textViewRpm"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_back"

        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewRpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_back"
        android:layout_alignBaseline="@+id/textViewSpeed"
        android:layout_alignBottom="@+id/textViewSpeed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewΤhrottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_back"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignBaseline="@+id/textViewRpm"
        android:layout_alignBottom="@+id/textViewRpm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewCoolantTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_back"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textViewSpeedName"
        android:layout_alignLeft="@+id/textViewCoolTempName"
        android:layout_alignStart="@+id/textViewCoolTempName" />

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle_back"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignBaseline="@+id/textViewCoolantTemp"
        android:layout_alignBottom="@+id/textViewCoolantTemp"
        android:layout_alignRight="@+id/textViewTrottleName"
        android:layout_alignEnd="@+id/textViewTrottleName" />

    <TextView
        android:id="@+id/textViewSpeedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:layout_alignBaseline="@+id/textViewRpmName"
        android:layout_alignBottom="@+id/textViewRpmName"
        android:layout_alignRight="@+id/textViewSpeed"
        android:layout_alignEnd="@+id/textViewSpeed"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/textViewRpmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rpm"
        android:layout_alignBaseline="@+id/textViewTrottleName"
        android:layout_alignBottom="@+id/textViewTrottleName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewTrottleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Throttle"
        android:layout_below="@+id/textViewRpm"
        android:layout_alignRight="@+id/textViewΤhrottle"
        android:layout_alignEnd="@+id/textViewΤhrottle"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textViewCoolTempName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Coolant Temperature"
        android:layout_below="@+id/textViewCoolantTemp"
        android:layout_toLeftOf="@+id/textViewRpmName"
        android:layout_toStartOf="@+id/textViewRpmName" />

    <TextView
        android:id="@+id/textViewPressureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maf Pressure"
        android:layout_alignTop="@+id/textViewCoolTempName"
        android:layout_alignRight="@+id/textViewPressure"
        android:layout_alignEnd="@+id/textViewPressure" />

    <TextView
        android:id="@+id/textViewConStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/textViewRpmName"
        android:layout_alignEnd="@+id/textViewRpmName"
        android:layout_marginTop="14dp" />


</RelativeLayout>
